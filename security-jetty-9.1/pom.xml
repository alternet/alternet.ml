<!--                         <phase>post-integration-test</phase> -->
<!--                         <goals> -->
<!--                             <goal>stop</goal> -->
<!--                         </goals> -->
<!--                     </execution> -->
<!--                 </executions> -->
            </plugin>
        </plugins>
    </build>

</project>
